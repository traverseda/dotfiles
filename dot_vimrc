runtime defaults.vim

lua require('plugins')

autocmd FileType html setlocal tabstop=2 shiftwidth=2 softtabstop=2

set list lcs=trail:~,tab:»·

set background=dark
set termguicolors
colorscheme tokyonight-night

"Q now closes buffers not all of vim
"Use 'qa' to quit entire session, xa to quite and save entire session, etc
cnoreabbrev wq w<bar>BufDel
cnoreabbrev x w<bar>BufDel
cnoreabbrev q BufDel

" cnoreabbrev wqa wa<bar>BufDel
" cnoreabbrev xa wa<bar>BufDel
" cnoreabbrev qa BufDel


map <C-a> <Plug>(cokeline-pick-focus)
tmap <C-a> <C-\><C-n><Plug>(cokeline-pick-focus)
tnoremap <C-a>] <C-\><C-n>
map <C-a>c :term<cr>
map <C-a>x :bd<cr>
tmap <C-a>c <C-\><C-n>:term<cr>
tmap <C-a>q <C-\><C-n>:BufDel<cr>

autocmd TermOpen * startinsert
autocmd BufEnter term://* startinsert

function ChangeBufferName(old,new) abort
    " Save the current cursor position and the current buffer number
    let saveBuffer = bufnr('')
    let saveCursor = getpos('.')
    " Change the buffer name
    execute 'b ' . a:old
    execute 'file ' . a:new
    execute 'b ' . saveBuffer
    call setpos('.', saveCursor)
endfunction

