# Path to your oh-my-zsh installation.
export ZSH="$HOME/.oh-my-zsh"

alias vim="nvim"
ZSH_THEME="robbyrussell"

plugins=(git)

source $ZSH/oh-my-zsh.sh

export EDITOR='nvim'
export HISTCONTROL=ignoredups

alias e="nvr --remote"
if (( ${+NVIM} )); then
  export EDITOR="nvr --remote-wait"
  alias vim="nvr --remote"
fi

